<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="0.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lexer.PrimaryController">
   <children>
   <HBox alignment="CENTER">
      <children>
      <VBox alignment="CENTER">
         <children>
            <TextArea fx:id="raw_code"/>
         </children>
      </VBox>
      <TableView fx:id="output">
         <columns>
            <TableColumn text="Word" prefWidth="200">
               <cellValueFactory>
                  <PropertyValueFactory property="word_value" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn text="Token" prefWidth="200">
               <cellValueFactory>
                  <PropertyValueFactory property="token_value" />
               </cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>
      </children>
   </HBox>
   <TextArea fx:id="terminal" style="-fx-control-inner-background:#000000; -fx-font-family: Consolas; -fx-highlight-fill: #00ff00; -fx-highlight-text-fill: #000000; -fx-text-fill: #00ff00; " />
   </children>
</VBox>
